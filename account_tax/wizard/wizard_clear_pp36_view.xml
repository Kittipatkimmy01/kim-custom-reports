<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_clear_pp36_form" model="ir.ui.view">
            <field name="name">wizard.clear.pp36.form</field>
            <field name="model">wizard.clear.pp36</field>
            <field name="arch" type="xml">
                <form string="Clear PP 36">
                    <group>
                        <group>
                            <field name="vat_ref" required="1" />
                            <field name="journal_id" required="1" options="{'no_create':True, 'no_create_edit':True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="date" required="1" />
                        </group>
                    </group>
                    <footer>
                        <button name="clear_36" string="Clear" type="object" class="oe_highlight"/>
                        <button type="special" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
