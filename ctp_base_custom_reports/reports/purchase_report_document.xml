<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="purchase_report_document">
        <div class="header">
            <div class="row">
                <div class="col-2 pe-2">
                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 120px;" alt="Company Logo" class="float-left position-absolute"/>
                </div>
                <div class="col-7 ps-3" style="font-family: AngsanaNew;font-size:14px;">
                    <strong>
                        <span t-field="o.company_id.name"/>
                    </strong>
                    <br/>
                    <t t-if="o.company_id.partner_id.branch">
                        <t t-if="o.company_id.partner_id.branch == '00000'">
                            <span>สาขา สำนักงานใหญ่</span>
                        </t>
                        <t t-if="o.company_id.partner_id.branch != '00000'">สาขา
                            <span t-field="o.company_id.partner_id.branch"/>
                        </t>
                    </t>
                    <t t-if="o.company_id.vat">รหัสประจำตัวผู้เสียภาษี :
                        <span t-field="o.company_id.vat"/>
                    </t>
                    <br/>
                    ที่อยู่ :
                    <span t-if="o.company_id.partner_id.street" t-esc="o.company_id.partner_id.street"/>
                    <br/>
                    <span t-if="o.company_id.partner_id.street2" t-esc="o.company_id.partner_id.street2"/>
                    <span t-if="o.company_id.partner_id.city" t-esc="o.company_id.partner_id.city"/>
                    <span t-if="o.company_id.partner_id.state_id" t-esc="o.company_id.partner_id.state_id.name"/>
                    <span t-if="o.company_id.partner_id.zip" t-esc="o.company_id.partner_id.zip"/>
                    <span t-if="o.company_id.partner_id.country_id" t-esc="o.company_id.partner_id.country_id.name"/>
                    <br/>
                    <t t-if="o.company_id.phone">โทรศัพท์ :
                        <span class="o_force_ltr" t-field="o.company_id.phone"/>
                    </t>
                    <t t-if="o.company_id.fax">แฟกซ์ :
                        <span class="o_force_ltr" t-field="o.company_id.fax"/>
                    </t>
                    <br/>
                    <t t-if="o.company_id.email">อีเมล์ :
                        <span t-field="o.company_id.email"/>
                    </t>
                    <t t-if="o.company_id.website">เว็บไซต์ :
                        <span t-field="o.company_id.website"/>
                    </t>
                </div>
                <div class="col-3 pe-2 float-right text-right" style="width:max-content;font-family: AngsanaNew;font-size:14px;">
                    <h2 t-if="o.state == 'draft'" class="w-100 text-center mx-3 p-3 border border-dark" style="border-radius: 10px;">
                        <span>ใบขอซื้อ</span>
                    </h2>
                    <h2 t-if="o.state in ['sent', 'to approve','purchase','done']" class="w-100 text-center mx-3 p-3 border border-dark" style="border-radius: 10px;">
                        <span>ใบสั่งซื้อ</span>
                    </h2>
                    <br/>
                    <div class="text-muted w-100 text-center mx-3 p-3">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </div>

        <t t-call="web.external_layout">
            <div class="page" style="font-family: AngsanaNew; font-size: 14px;">
                <div class="row">
                    <div class="col-7 p-3">
                        <strong>ผู้ขาย</strong>
                        <br/>
                        ชื่อ :[<span t-field="o.partner_id.ref"/>]&amp;nbsp;<span t-field="o.partner_id.name"/>
                        <br/>
                        ที่อยู่
                        <span t-if="o.partner_id.street" t-esc="o.partner_id.street"/>
                        <br/>
                        <span t-if="o.partner_id.street2" t-esc="o.partner_id.street2"/>
                        <span t-if="o.partner_id.city" t-esc="o.partner_id.city"/>
                        <span t-if="o.partner_id.state_id" t-esc="o.partner_id.state_id.name"/>
                        <span t-if="o.partner_id.zip" t-esc="o.partner_id.zip"/>
                        <span t-if="o.partner_id.country_id" t-esc="o.partner_id.country_id.name"/>
                        <br/>
                        เลขประจำตัวผู้เสียภาษี : <span t-if="o.partner_id.vat" t-esc="o.partner_id.vat"/>
                        สาขา : <span t-if="o.partner_id.branch != '00000'" t-esc="o.partner_id.branch"/><span t-else="">สำนักงานใหญ่</span>
                        <br/>
                        โทรศัพท์ :<span t-if="o.partner_id.phone" t-esc="o.partner_id.phone"/> แฟกซ์ :<span t-if="o.partner_id.fax" t-esc="o.partner_id.fax"/>
                        <br/>
                        อีเมล์ :<span t-if="o.partner_id.email" t-esc="o.partner_id.email"/>
                    </div>
                    <div class="col-5 p-3">
                         <strong>เลขที่ใบสั่งซื้อ</strong>:
                        <span t-field="o.name"/>
                        <br/>
                         <strong>วันที่</strong>:
                        <span t-field="o.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;,&quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                        <br/>
                         <strong>วันที่ส่งมอบ</strong>:
                        <span t-field="o.date_planned" t-options="{&quot;widget&quot;: &quot;date&quot;,&quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                        <br/>
                         <strong>เงื่อนไขการชำระเงิน</strong>:
                        <span t-field="o.payment_term_id.name"/>
                        <br/>
                         <strong>ใบขอซื้อ</strong>:
                        <span t-field="o.origin"/>
                        <br/>
<!--                         <strong>หน่วยงาน</strong>: <span t-field="o.department_id"/>-->
                    </div>
                </div>
                <table class="table table-bordered o_main_table" width="100%">
                    <thead>
                        <tr style="background-color:#E2DBC8;">
                            <td class="text-center p-2">ลำดับ</td>
                            <td class="text-center p-2">รหัสสินค้า</td>
                            <td class="text-center p-2">รายการสินค้า</td>
                            <td class="text-center p-2">จำนวน</td>
                            <td class="text-center p-2">ราคา/หน่วย</td>
                            <td class="text-center p-2">ส่วนลด</td>
                            <td class="text-center p-2">มูลค่ารวม</td>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="sumall" t-value="0"/>
                        <t t-set="line_index" t-value="0"/>
                        <t t-set="lines" t-value="line"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-if="not line.display_type">
                                <tr style="font-family: AngsanaNew; font-size: 12px;">
                                    <t t-set="line_index" t-value="line_index + 1"/>
                                    <td width="5%" class="text-center p-2">
                                        <span t-esc="line_index"/>
                                    </td>
                                    <td width="15%" class="text-center p-2">
                                        <span t-esc="line.product_id.default_code"/>
                                    </td>
                                    <td width="55%" class="p-2">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td width="15%" class="text-center p-2">
                                        <span t-esc="'{:,.0f}'.format(line.product_qty)"/>
                                        <span t-esc="line.product_uom.name"/>
                                    </td>
                                    <td width="15%" class="text-right p-2">
                                        <span t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                    </td>
                                    <td width="15%" class="text-right p-2">
                                        <span t-esc="'{:,.2f}'.format(line.discount)"/>
                                    </td>
                                    <td class="text-right p-2">
                                        <span t-esc="'{:,.2f}'.format(line.price_subtotal)"/>
                                    </td>
                                </tr>
                                <t t-set="sumall" t-value="line.price_subtotal + sumall"/>
                            </t>
                        </t>
                    </tbody>
                </table>
                <div class="row justify-content-end">
                    <div class="col-5">
                        <table class="table table-sm">
                            <tr class="border-black" style="font-family: AngsanaNew; font-size: 12px;">
                                <td>ภาษีมูลค่าเพิ่ม <span t-esc="', '.join(map(lambda x: (x.description or '{0:.2f}%'.format(x.amount)), o.order_line.taxes_id))" id="line_tax_ids"/></td>
                                <td class="text-right">
                                    <span t-esc="o.amount_tax" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                </td>
                            </tr>
                            <tr class="border-black" style="border-bottom:1pt solid black;font-family: AngsanaNew; font-size: 12px;">
                                <td><strong>มูลค่าสุทธิ</strong></td>
                                <td class="text-right">
                                    <span t-esc="o.amount_total" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <span>จำนวนเงิน
                    <t t-esc="o.currency_id.thai_baht('{0:.2f}'.format(o.amount_total))"/>
                </span>
                <p>
                    <strong>หมายเหตุ</strong>
                </p>
                <p t-field="o.notes"/>
                <div class="oe_structure"/>
            </div>
    <!--        <div style="page-break-before: auto;"/>-->

            <div class="footer last-page">
                <table class="table table-borderless" style="border-color:#FFF;width:100%;height:20%">
                    <tr style="background-color: #FFF;font-family: AngsanaNew; font-size: 14px;">
                        <td class="text-center">วันที่ <span style="border-bottom:1px dashed #000;" t-esc="context_timestamp(o.create_date).strftime('%d-%m-%Y')"/></td>
                        <td/>
                        <td class="text-center">วันที่ <span style="border-bottom:1px dashed #000;" t-esc="context_timestamp(o.write_date).strftime('%d-%m-%Y')"/></td>
                        <td/>
                        <td class="text-center">วันที่ <span style="border-bottom:1px dashed #000;" t-esc="context_timestamp(o.write_date).strftime('%d-%m-%Y')"/></td>
                    </tr>
                </table>
            </div>
        </t>
    </template>

    <template id="report_purchase_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                     t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="ctp_base_custom_reports.purchase_report_document" t-lang="lang"/>
                </div>
            </t>
        </t>
    </template>

    <record id="paperformat_po_format" model="report.paperformat">
        <field name="name">Purchase Order Peper format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">55</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_report_scr_custom_purchase" model="ir.actions.report">
        <field name="name">Purchase Order (PDF)</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ctp_base_custom_reports.report_purchase_report</field>
        <field name="report_file">ctp_base_custom_reports.report_purchase_report</field>
        <field name="binding_model_id" eval="ref('purchase.model_purchase_order')"/>
        <field name="paperformat_id" ref="paperformat_po_format"/>
        <field name="binding_type">report</field>
    </record>
</odoo>