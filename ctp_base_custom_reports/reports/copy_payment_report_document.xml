    <record id="paperformat_original_payment_format" model="report.paperformat">
        <field name="name">Original Payment Peper format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">55</field>
        <field name="margin_bottom">50</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">50</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_report_scr_custom_sale" model="ir.actions.report">
        <field name="name">Payment-Copy (PDF)</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ctp_base_custom_reports.report_copy_payment</field>
        <field name="report_file">ctp_base_custom_reports.report_copy_payment</field>
        <field name="binding_model_id" eval="ref('account.model_account_payment')"/>
        <field name="paperformat_id" ref="paperformat_original_payment_format"/>
        <field name="print_report_name">'Copy-%s' % (object.name)</field>
        <field name="binding_type">report</field>
    </record>

