    <!--&lt;!&ndash;                                <span t-esc="o.amount_untaxed_before_trade_discount" t-options='{"widget": "float", "precision": 2}'/>&ndash;&gt;-->
    <!--                            </td>-->
    <!--                        </tr>-->
