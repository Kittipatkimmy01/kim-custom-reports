    <!--&lt;!&ndash;                                <span t-esc="o.amount_trade_discount" t-options='{"widget": "float", "precision": 2}'/>&ndash;&gt;-->
    <!--                            </td>-->
    <!--                        </tr>-->
    <!--                        <tr class="border-black">-->
    <!--                            <td >มูลค่าหลังหักส่วนลด</td>-->
